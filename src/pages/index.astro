---
import BaseLayout from '../layouts/BaseLayout.astro'
import Title from '../components/Title'
import PostItem from '../components/PostItem'

const PAGE_TITLE = 'All Posts'
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<BaseLayout title={PAGE_TITLE}>
	<Title title={PAGE_TITLE} type='text'/>
	{allPosts.map((post) => <PostItem url={post.url!} title={post.frontmatter.title} date={post.frontmatter.pubDate} tags={post.frontmatter.tags} />)}
</BaseLayout>